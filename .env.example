# Solana Configuration
SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_HELIUS_API_KEY
SOLANA_NETWORK=mainnet-beta
POLL_INTERVAL=1500
CONCURRENCY=3
RATE_LIMIT=120

# Telegram Configuration
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID=YOUR_CHAT_ID

# Feishu Configuration
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_WEBHOOK_KEY
ENABLE_FEISHU=true

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/solana_monitor
REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Watch Addresses (comma-separated)
WATCH_ADDRESSES=address1,address2,address3